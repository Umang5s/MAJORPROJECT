<%- layout("/layout/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4">My Bookings</h2>

  <% if (!bookings || bookings.length === 0) { %>
    <p>You haven't booked any listings yet.</p>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(booking => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow">
            <% if (booking.listing && booking.listing.image && booking.listing.image.url) { %>
              <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="Listing Image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= booking.listing ? booking.listing.title : "Listing" %></h5>
              <p class="card-text">
                <strong>Price:</strong> â‚¹<%= booking.price %><br>
                <strong>Rooms:</strong> <%= booking.roomsBooked || 1 %><br>
                <strong>Host:</strong> <%= (booking.host && booking.host.username) ? booking.host.username : (booking.listing && booking.listing.owner ? booking.listing.owner : 'Host') %><br>
                <strong>Booking ID:</strong> <%= booking._id %><br>
                <strong>Payment ID:</strong> <%= booking.paymentId || "N/A" %><br>
                <strong>Booked On:</strong> <%= booking.createdAt ? booking.createdAt.toDateString() : '' %>
              </p>

              <!-- Guest details (if present) -->
              <% if (booking.guestDetails) { %>
                <div class="mb-2">
                  <strong>Guest:</strong> <%= booking.guestDetails.name || '' %> (<%= booking.guestDetails.email || '' %>)<br>
                  <strong>Phone:</strong> <%= booking.guestDetails.phone || 'N/A' %><br>
                  <strong>Guests Count:</strong> <%= booking.guestDetails.guestsCount || 'N/A' %>
                </div>
              <% } %>

              <a href="/listings/<%= booking.listing ? booking.listing._id : '' %>" class="btn btn-primary">View Listing</a>

              <% if (booking.status !== "cancelled") { %>
                <form action="/bookings/<%= booking._id %>/cancel" method="POST" class="d-inline"
                  onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                  <button class="btn btn-danger btn-sm mt-2">Cancel Booking</button>
                </form>
              <% } %>

            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
