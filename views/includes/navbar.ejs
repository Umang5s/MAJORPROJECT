<% const user=typeof currUser !=='undefined' ? currUser : null; %>

  <style>
    .search-btn {
      background-color: #fe424d;
      color: white;
      border-radius: 25px;
      padding: 0 1rem;
    }

    .search-btn:hover {
      background-color: #fe424d;
      color: white;
    }

    .search-btn i {
      margin-right: 0.5rem;
    }

    .search-inp {
      border-radius: 25px;
      padding: 0.5rem 3rem;
    }

    .nav-link.dropdown-toggle {
      cursor: pointer;
    }

    .rounded-profile {
      width: 35px;
      height: 35px;
      object-fit: cover;
      border-radius: 50%;
      margin-right: 8px;
    }

    .profile-image-wrapper {
      width: 90px;
      height: 90px;
      border-radius: 50%;
      overflow: hidden;
      border: 2px solid #ddd;
      margin: 0 auto 1rem;
    }

    .profile-image-wrapper img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
  </style>

  <nav class="navbar navbar-expand-md bg-white shadow-sm sticky-top py-2">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold text-danger d-flex align-items-center gap-2" href="/listings">
        <i class="fa-solid fa-compass"></i> Explore
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav me-auto"></div>

        <form class="d-flex me-3" role="search" action="/listings/search" method="GET">
          <input class="form-control search-inp me-2" type="search" name="q" placeholder="Search destinations" required>
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>

        <div class="navbar-nav d-flex align-items-center gap-3">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          <% if (!user) { %>
            <a class="nav-link" href="/signup"><b>Sign Up</b></a>
            <a class="nav-link" href="/login"><b>Log In</b></a>
            <% } else { %>
              <a class="nav-link" href="/watchlist" title="Watchlist" data-bs-toggle="tooltip"
                data-bs-placement="bottom">
                <i class="fa-solid fa-heart text-danger"></i>
              </a>
              <a href="#" id="profileBtn" class="nav-link d-flex align-items-center">
                <% if (user.localPhoto) { %>
                  <img src="<%= user.localPhoto %>" alt="Profile" class="rounded-profile">
                  <% } else if (user.avatar) { %>
                    <img src="<%= user.avatar %>" alt="Google Profile" class="rounded-profile">
                    <% } else { %>
                      <i class="fa-solid fa-user-circle fa-2x"></i>
                      <% } %>
              </a>
              <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Profile Modal -->
  <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <% if (user) { %>
          <div class="modal-header">
            <h5 class="modal-title" id="profileModalLabel">Your Profile</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div>
            <form id="photoForm" action="/profile/edit" method="POST" enctype="multipart/form-data">
              <div class="modal-body text-center">
                <% if (user.localPhoto || user.avatar) { %>
                  <div class="profile-image-wrapper">
                    <img src="<%= (user.localPhoto || user.avatar) + '?ts=' + Date.now() %>" alt="Profile"
                      id="profilePreview" />
                  </div>
                  <% } else { %>
                    <i class="fa-solid fa-user-circle fa-3x mb-3"></i>
                    <% } %>

                      <input type="file" name="photo" id="photoInput" accept="image/*" hidden
                        onchange="autoUploadPhoto(this)">
                      <div class="d-grid gap-2 mb-3">
                        <button type="button" class="btn btn-outline-primary btn-sm"
                          onclick="document.getElementById('photoInput').click()">Change Photo</button>
                      </div>

                      <hr class="my-3">

                      <p><strong>Name:</strong>
                        <%= user.name || user.displayName || 'N/A' %>
                      </p>
                      <p><strong>Email:</strong>
                        <%= user.email %>
                      </p>
              </div>
              <div class="row mt-4">
                <div class="col-6">
                  <a href="/bookings/my"
                    class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center gap-2 py-2 shadow-sm rounded">
                    <i class="fa-solid fa-suitcase-rolling"></i><span>My Bookings</span>
                  </a>
                </div>
                <div class="col-6">
                  <a href="/bookings/received"
                    class="btn btn-outline-success w-100 d-flex align-items-center justify-content-center gap-2 py-2 shadow-sm rounded">
                    <i class="fa-solid fa-clipboard-list"></i><span>Received Bookings</span>
                  </a>
                </div>
              </div>
              <div class="modal-footer justify-content-between align-items-center">
                <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
                <div class="d-flex gap-2">
                </div>
              </div>
            </form>

            <% if (user.localPhoto) { %>
              <div class="text-center mt-3">
                <form action="/profile/delete-photo" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Delete Photo</button>
                </form>
              </div>
              <% } %>

                <div class="text-center mt-3">
                  <button class="btn btn-sm btn-warning" onclick="window.location.href='/allow-change-password'">
                    Change Password
                  </button>
                </div>
          </div>
          <% } %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(el => new bootstrap.Tooltip(el));

      const profileBtn = document.getElementById('profileBtn');
      if (profileBtn) {
        profileBtn.addEventListener('click', function (e) {
          e.preventDefault();
          const profileModal = new bootstrap.Modal(document.getElementById('profileModal'));
          profileModal.show();
        });
      }
    });

    function autoUploadPhoto(input) {
      const file = input.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const preview = document.getElementById('profilePreview');
          if (preview) preview.src = e.target.result;
        };
        reader.readAsDataURL(file);

        // Submit form immediately after file selected
        const form = document.getElementById('photoForm');
        const formData = new FormData(form);

        fetch('/profile/edit', {
          method: 'POST',
          body: formData
        })
          .then(response => response.ok ? window.location.reload() : alert('Upload failed'))
          .catch(error => console.error('Error uploading:', error));
      }
    }
  </script>