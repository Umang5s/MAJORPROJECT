<%- layout("/layout/boilerplate") %>

<div class="row mt-4">
  <h1 class="col-6 offset-3 text-center">Login to Wanderlust</h1>

  <!-- Local Login Form -->
  <div class="col-6 offset-3 mt-3">
    <form action="/login" method="POST" novalidate class="needs-validation shadow p-4 rounded bg-light">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" placeholder="Enter Your Email" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter your email</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" placeholder="Enter Your Password" class="form-control" required>
        <div class="invalid-feedback">Please enter a password</div>
      </div>

      <button class="btn btn-success w-100">Login</button>
    </form>
  </div>

  <!-- Divider -->
  <div class="col-6 offset-3 my-3 d-flex align-items-center">
    <hr class="flex-grow-1 me-3">
    <span class="text-muted">OR</span>
    <hr class="flex-grow-1 ms-3">
  </div>

  <!-- Google Login -->
  <div class="col-6 offset-3 text-center">
    <a href="/auth/google" class="btn btn-outline-danger w-100 py-2">
      <i class="fa-brands fa-google me-2"></i> Continue with Google
    </a>
  </div>
</div>
