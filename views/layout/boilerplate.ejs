<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/rating.css">
    <!-- Mapbox CSS and JS -->
    <script src="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js"></script>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

    <style>
        /* Ensure map container has height */
        .location-map {
            width: 100%;
            height: 100%;
            min-height: 400px;
            border-radius: 16px;
            overflow: hidden;
        }
        .map-column {
            height: 450px;
        }
        .mapboxgl-map {
            border-radius: 16px;
        }
    </style>
</head>

<body>

    <div id="loading-overlay" style="display: none; position: fixed; top: 0; left: 0; 
  width: 100%; height: 100%; background-color: rgba(255,255,255,0.8); 
  z-index: 9999; justify-content: center; align-items: center;">
        <div class="spinner-border text-danger" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    
    <script>
        // Wait for page to load
        document.addEventListener("DOMContentLoaded", () => {
            const searchForm = document.querySelector('form[role="search"]');
            const loadingOverlay = document.getElementById('loading-overlay');

            if (searchForm && loadingOverlay) {
                searchForm.addEventListener('submit', function (e) {
                    // Show loading spinner only when form is submitted
                    loadingOverlay.style.display = 'flex';
                });
            }
        });

        // Set global Mapbox token from environment - FIXED: using MAP_TOKEN
        window.MAP_TOKEN = '<%= process.env.MAP_TOKEN %>';
        console.log('Mapbox token loaded:', window.MAP_TOKEN ? 'Token exists (length: ' + window.MAP_TOKEN.length + ')' : 'No token found');
        
        // Also set as MAPBOX_TOKEN for compatibility
        window.MAPBOX_TOKEN = window.MAP_TOKEN;
    </script>
    
    <% /* Defensive default: ensure `mode` is always defined to avoid ReferenceError in EJS. If your server already sets
        res.locals.mode, this line will keep that value. Otherwise it defaults to "traveller" . */ if (typeof
        mode==='undefined' ) { if (typeof locals !=='undefined' && typeof locals.mode !=='undefined' ) {
        mode=locals.mode; } else { mode='traveller' ; } } %>
        
        <% if(mode==="host" ){ %>
            <%- include("../includes/navbar_host.ejs") %>
                <% } else { %>
                    <%- include("../includes/navbar_traveller.ejs") %>
                        <% } %>
                            <div class="container">
                                <%- include("../includes/flash.ejs") %>
                                    <%- body %>
                            </div>

                            <%- include("../includes/footer.ejs") %>
                                <script
                                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                                    crossorigin="anonymous"></script>
                                <script src="/js/script.js"></script>

</body>

</html>